<UserControl x:Class="FirstFloor.ModernUI.App.Pages.viewallappointment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:FirstFloor.ModernUI.App"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             d:DesignHeight="465.789"
             d:DesignWidth="499.624"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel MinWidth="200">


            <TextBlock Margin="0,0,0,8"
                       Style="{StaticResource Heading2}"
                       Text="View Appointment" />
            <Button Width="80"
                    Click="Button_Click"
                    Content="Refresh" />
            <DataGrid x:Name="DataGrid3" Margin="0,20,0,0" 
                      AutoGenerateColumns="True"/>
            <mui:ModernButton x:Name="delbutton" Content="Delete" Click="delbutton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>