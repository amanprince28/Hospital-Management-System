<UserControl x:Class="ModernUINavigationApp3.Pages.ViewAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             Width="768"
             Height="535"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <Button Width="97"
                Margin="335,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="Refresh" />
        <StackPanel>
        <DataGrid x:Name="datagridviewadmin"
                  Margin="0,50,0,0"
                  HorizontalAlignment="Center"
                  AutoGenerateColumns="True"
                  IsTextSearchEnabled="True" VerticalAlignment="Top" />
        <mui:ModernButton x:Name="delbutton" Content="Delete" HorizontalAlignment="Left" Margin="335,77,0,0" VerticalAlignment="Top" Click="delbutton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
